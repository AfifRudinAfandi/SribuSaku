<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_round_bottomshet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textSize="28dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/colorHitamText"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apakah transaksi ini benar ingin dilakukan?"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorHitamText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:text="Sribu Saku"
                android:textSize="25dp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedekah seribu rupiah!"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorAbuDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.000"
                android:textSize="25dp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/colorHitamText"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/btn_sedekah"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="55dp"
                android:background="@drawable/button3"
                android:text="Lanjutkan"
                android:textSize="20dp"
                android:fontFamily="@font/opensans_bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPutih" />
            <TextView
                android:visibility="gone"
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>