<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqBeliFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apa Itu Sribu Saku ?"
            android:textSize="12dp"
            android:textColor="@color/colorHitamText"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sribu Saku merupakan aplikasi pembayaran onlin
yang di luncurkan oleh LAZISNU aplikasi ini diharapkan dapat membantu banyak orang untuk
melakukan pembayaran zakat maupun donasi dan juga pembayaran-pembayaran lainnya"
            android:textSize="12dp"
            android:textColor="@color/colorHitamText"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>

</FrameLayout>

