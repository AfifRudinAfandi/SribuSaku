<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PulsaActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_marginTop="-56dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">
        <FrameLayout
            android:id="@+id/btn_kembali"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/button2">

            <ImageButton
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_chevron_left_black_24dp" />
        </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:text="Pulsa"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/colorCard" />
        <View
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor HP"
            android:textSize="16dp"
            android:textColor="@color/colorHitamText"
            android:fontFamily="@font/opensans_bold"/>

        <EditText
            android:id="@+id/et_nomorpulsa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:singleLine="true" />
        <TextView
            android:visibility="gone"
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:visibility="gone"
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa"
            android:textSize="16dp"
            android:textColor="@color/colorHitamText"
            android:fontFamily="@font/opensans_bold"/>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_sepuluh"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 10.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btn_duapuluh"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 20.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_dualima"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
