                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 25.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btn_limapuluh"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 50.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_seratus"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 100.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
