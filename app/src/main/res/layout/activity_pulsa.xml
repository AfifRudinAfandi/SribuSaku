                android:id="@+id/btn_seratuslimapuluh"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 150.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_duaratus"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 200.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btn_duaratuslimapuluh"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 250.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_limaratus"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 Rb"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 500.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btn_satujuta"
                android:layout_width="0dp"
                android:layout_weight="3.4"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Jt"
                    android:textSize="22dp"
                    android:textColor="@color/colorHitamText"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga 1.000.000"
                    android:textSize="16dp"
                    android:textColor="@color/colorBiruIc"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>